generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Donor {
  id        Int      @id @default(autoincrement())
  name      String
  bloodType String
  email     String   @unique
  createdAt DateTime @default(now())
}
model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  role       Role
  bloodType  String?
  createdAt  DateTime @default(now())
  donations  Donation[]
  requests   Request[]
}

model Donation {
  id        Int      @id @default(autoincrement())
  donorId   Int
  user      User     @relation(fields: [donorId], references: [id])
  date      DateTime
  location  String
}

model Request {
  id          Int      @id @default(autoincrement())
  recipientId Int
  user        User     @relation(fields: [recipientId], references: [id])
  status      String   @default("pending")
  requestedAt DateTime @default(now())
}

enum Role {
  DONOR
  RECIPIENT
}